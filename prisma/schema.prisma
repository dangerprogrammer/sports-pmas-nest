generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cpf       String @unique
  nome_comp String
  roles     Role[] @default([ALUNO])

  aluno     Aluno?     @relation("aluno")
  professor Professor? @relation("professor")
  admin     Admin?     @relation("admin")

  hash     String
  hashedRt String?

  solic    Solic?
  accepted Boolean? @default(false)

  @@unique(fields: [id, cpf, createdAt, updatedAt, nome_comp, accepted])
  @@unique(fields: [id, createdAt, updatedAt, nome_comp])
  @@unique(fields: [createdAt, updatedAt])
  @@map("users")
}

model Aluno {
  id        Int      @id
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation("aluno", fields: [id, cpf, createdAt, updatedAt, nome_comp, accepted], references: [id, cpf, createdAt, updatedAt, nome_comp, accepted])

  modalidades Modalidade[] @relation("aluno_modalidade")

  nome_comp  String
  cpf        String
  email      String
  tel        String
  endereco   String
  bairro     String
  data_nasc  DateTime
  sexo       Gender
  inscricoes Inscricao[] @relation("inscricoes")
  atestados  Atestado[]  @relation("atestados")
  menor      AlunoMenor? @relation("menor")

  accepted Boolean @default(false)

  @@unique([id, cpf, createdAt, updatedAt, nome_comp, accepted])
  @@unique([id, createdAt, updatedAt, accepted])
  @@map("alunos")
}

model Atestado {
  id        Int      @id
  createdAt DateTime
  updatedAt DateTime
  aluno     Aluno    @relation("atestados", fields: [id, createdAt, updatedAt, accepted], references: [id, createdAt, updatedAt, accepted])

  anexo String
  msg   String?

  accepted Boolean @default(false)

  @@unique([id, createdAt, updatedAt, accepted])
  @@map("atestados")
}

model AlunoMenor {
  id        Int      @id
  createdAt DateTime
  updatedAt DateTime
  aluno     Aluno    @relation("menor", fields: [id, createdAt, updatedAt, accepted], references: [id, createdAt, updatedAt, accepted])

  nomeResp1  String
  cpfResp1   String
  emailResp1 String
  telResp1   String

  nomeResp2  String?
  cpfResp2   String?
  emailResp2 String?
  telResp2   String?

  accepted Boolean @default(false)

  @@unique([id, createdAt, updatedAt, accepted])
  @@map("aluno_menors")
}

model Professor {
  id        Int      @id
  createdAt DateTime
  updatedAt DateTime
  nome_comp String
  user      User     @relation("professor", fields: [id, createdAt, updatedAt, nome_comp], references: [id, createdAt, updatedAt, nome_comp])

  @@unique([id, createdAt, updatedAt, nome_comp])
  @@map("professors")
}

model Admin {
  id        Int      @id
  createdAt DateTime
  updatedAt DateTime
  nome_comp String
  user      User     @relation("admin", fields: [id, createdAt, updatedAt, nome_comp], references: [id, createdAt, updatedAt, nome_comp])

  solics Solic[]

  @@unique([id, createdAt, updatedAt, nome_comp])
  @@map("admins")
}

model Solic {
  id       Int     @id @default(autoincrement())
  toAdmins Admin[]

  userId Int  @unique
  from   User @relation(fields: [userId], references: [id])

  role Role

  @@map("solics")
}

model Inscricao {
  alunoId Int   @default(autoincrement())
  aluno   Aluno @relation("inscricoes", fields: [alunoId], references: [id])

  aula    Aula
  time    DateTime @unique
  horario Horario  @relation(fields: [time], references: [time])
}

model Modalidade {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     Aula      @unique
  horarios Horario[] @relation("horario_modalidade")
  alunos   Aluno[]   @relation("aluno_modalidade")

  endereco String     @default("Endereco...")
  bairro   String     @default("Bairro...")
  local    Localidade @relation("local_modalidade", fields: [endereco, bairro], references: [endereco, bairro])

  vagas Int? @default(15)

  @@map("modalidades")
}

model Horario {
  id          Int          @id @default(autoincrement())
  modalidades Modalidade[] @relation("horario_modalidade")

  inscricoes Inscricao[]

  time    DateTime @unique
  periodo Periodo

  @@map("horarios")
}

model Localidade {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  modalidades Modalidade[] @relation("local_modalidade")
  endereco    String       @unique
  bairro      String

  @@unique([endereco, bairro])
  @@map("localidades")
}

enum Periodo {
  MANHA
  TARDE
  NOITE
}

enum Aula {
  NATACAO
  HIDRO
}

enum Gender {
  FEMININO
  MASCULINO
  OUTRO
}

enum Role {
  ALUNO
  PROFESSOR
  ADMIN
}